<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JackNPoy.HomePage"
             Title="Cisko - JackNPoy"
             BackgroundColor="DeepSkyBlue">

    <VerticalStackLayout Spacing="30" Padding="30" VerticalOptions="Center">
        <Label x:Name="WelcomeLabel" 
               Text="Welcome to Jack N Poy!" 
               FontSize="36" 
               HorizontalOptions="Center" 
               TextColor="Black"/>

        <Button Text="Enter Game" 
                FontSize="24" 
                HorizontalOptions="Center" 
                Clicked="OnEnterGameClicked"/>

        <Button Text="FAQ" 
                FontSize="24" 
                HorizontalOptions="Center" 
                Clicked="OnFAQClicked">
            <Button.ImageSource>
                <FileImageSource File="faq_icon.png"/>
                <!-- Replace with your FAQ icon file -->
            </Button.ImageSource>
        </Button>
    </VerticalStackLayout>
</ContentPage>